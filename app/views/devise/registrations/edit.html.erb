

<div class="col-lg-8 main_content">
  <div class="col-lg-11">
              <h3>wf-N</h3>
              <h2>We'd like to know a little more about you.</h2>
              <p class="lead">Enter Contact Deets...</p>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
   
      
  
   <div class="form-group">
        <h5>Image, Name and Title.</h5>
          <div class="row">
			   <div class="col-lg-6">
				   <% if current_user.avatar.url.present? %>
				        <%= image_tag(current_user.avatar.url) %>
				        <p><%= f.check_box :remove_avatar %><%= f.label :remove_avatar, "Remove Avatar"%></p>
				        
				   <% else %>
				       <%= f.file_field :avatar %>
					   <% f.hidden_field :avatar_cache %>
				  <% end %>
			 
			   </div>
			  
			 
			  
            <div class="col-lg-6">
              <label for="firstName"><%= f.label :name, 'Full Name' %></label>
			<%= f.text_field :name, :autofocus => true, class: "col-lg-12 form-inline form-control", placeholder: "Full Name" %>
		   </div>
		   
		   
              <div class="col-lg-6">
              <label for="middleName"><%= f.label :email, 'Email' %></label>
			<%= f.text_field :email, class: "col-lg-12 form-inline form-control", placeholder: "Email" %>
		   </div>
	   </div>
    </div>
  
  
  
    <div class="form-group">
        <div class="row">
          <div class="col-lg-6">
              <label for="company"><%= f.label :company, 'Company' %></label>
			<%= f.text_field :company, class: "col-lg-12 form-inline form-control", placeholder: "Company" %>
		   </div>	
              
          
          <div class="col-lg-6">
              <label for="title"><%= f.label :title, 'Title' %></label>
			<%= f.text_field :title, class: "col-lg-12 form-inline form-control", placeholder: "Title" %>				
          </div>
        </div>
    </div>
	
	
	
	
	
    <div class="form-group">
		<h5>Contact Information.</h5>
        <div class="row">
	
	<div class="col-lg-4">
          <label for="firstName"><%= f.label :city, 'City' %></label>
		<%= f.text_field :city, class: "col-lg-12 form-inline form-control", placeholder: "City" %>
	   </div>
	   
	   
          <div class="col-lg-4">
          <label for="middleName"><%= f.label :state, 'State' %></label>
		<%= f.text_field :state, class: "col-lg-12 form-inline form-control", placeholder: "State" %>
	   </div>
	   
       
      <div class="col-lg-4">
          <label for="lastName"><%= f.label :country, 'Country' %></label>
		<%= f.text_field :country, class: "col-lg-12 form-inline form-control", placeholder: "Country" %>
	</div>
	</div>
	</div>
	
	
	
	
    <div class="form-group">
        <div class="row">
      <div class="col-lg-6">
      <label for="middleName"><%= f.label :cell_phone, 'Cell Phone' %></label>
	<%= f.text_field :cell_phone, class: "col-lg-12 form-inline form-control", placeholder: "Cell Phone" %>
   </div>
   
   
  <div class="col-lg-6">
      <label for="lastName"><%= f.label :work_phone, 'Work Phone' %></label>
	<%= f.text_field :work_phone, class: "col-lg-12 form-inline form-control", placeholder: "Work Phone" %>
</div>
</div>
</div>

    <div class="form-group">
		<h5>Website.</h5>
        <div class="row">
      <div class="col-lg-12">
      <label for="middleName"><%= f.label :website, 'Website (URL)' %></label>
	<%= f.text_field :website, class: "col-lg-12 form-inline form-control", placeholder: "Enter the domain of your website." %>
   </div>
  
</div>
</div>

    <div class="form-group">
		<h5>Want to change your password? (Not Required)</h5>
		 <div class="row">
	    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	    <% end %>
  
  
	     <div class="col-lg-6">
	    <label for="exampleInputPassword"><%= f.label :password %></label>
	     <%= f.password_field :password, :class => "form-control", placeholder: "Leave blank if you don't want to change it", :autocomplete => "off" %>
	    </div>
  

	      <div class="col-lg-6">
	    <label for="exampleInputPassword"><%= f.label :password_confirmation, "Password Confirmation" %></label>
	     <%= f.password_field :password_confirmation, :class => "form-control", placeholder: ""%>
	    </div>
	</div>
</div>
		
		
		
		
    <div class="form-group">
	<h5>Confirm Changes (Required)</h5>
     <div class="row">
      <div class="col-lg-12">
      <label for="middleName"><%= f.label :current_password , 'Current Password' %></label>
	<%= f.text_field :current_password , class: "col-lg-12 form-inline form-control", placeholder: "Enter your current password to confirm these changes." %>
   </div>
  
</div>
</div>



<br/>
<%= f.submit "UPDATE MY INFO", :class => "btn btn-default"  %>
<% end %>
  
<br><br>

<h5>Cancel my account</h5>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
