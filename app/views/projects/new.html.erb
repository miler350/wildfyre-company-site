  <div class="col-lg-8 main_content">
    <div class="col-lg-11">
                <h3>cPro</h3>
                <h2>Let's create a new project.</h2>
                <p class="lead">Enter Project Deets...</p>
               
                    <div class="form-group">
					  <%= form_for [@user, @project] do |f| %>
					  
                      <label for="projectName"><%= f.label :project_name %></label>
					<%= f.text_field :project_name, :autofocus => true,  :class => "form-control", placeholder: "Enter name"  %>
                    
                    </div>
                    <div class="form-group">
                      <label for="projectDescription"><%= f.label :project_description %></label>
					<%= f.text_area :project_description, :class => "form-control", placeholder: "A few sentences to describe your  project." %>
                    </div>
				  
				  
                    <div class="form-group">
                      <label for="projectDescription"><%= f.label :project_category %></label>
					<%= f.select :project_category, [['Design & Development'], ['Consulting'], ['Full Service']], {}, { :class => "form-control input-lg"} %>
				  </div>
				  
                    <div class="form-group">
                      <label for="projectDescription"><%= f.label :project_special_requests %></label>
					<%= f.text_area :project_special_requests, :class => "form-control", placeholder: "Any super important things we need to know." %>

                    </div>
                      <div class="form-group">
                      <label for="projectDescription"> <%= f.label :project_budget %></label>
					<%= f.text_field :project_budget, :class => "form-control", placeholder: "$$" %>
					</div>
					
                      <div class="form-group">
                      <label for="projectDescription"> <%= f.label :project_budget_explanation %></label>
					<%= f.text_area :project_budget_explanation, :class => "form-control", placeholder: "Please feel free to elaborate on what's comfortable, what's optimal and what's doable as relates to your project goals." %>
					</div>
					
					

             
                    <div class="form-group">
                      <label for="exampleInputFile">Project Files</label>
                      <input type="file" id="exampleInputFile">
                      <p class="help-block">Please upload any super important project files (please compress all files that exceed 5MB).</p>
                    </div>
                    <div class="checkbox">
                      <label>
                        <input type="checkbox"> I agree to Wildfyre terms of service.
                      </label>
					  
				  </div>
                  <br/>
				  <%= f.submit "Let's Do This!", :class => "btn btn-default"  %>
                   
    </div>
</div>
      <!-- /.col-lg-9 -->
	  <% end %>